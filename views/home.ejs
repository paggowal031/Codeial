<link rel="stylesheet" href="/css/home.css">

      <h1>
          Codeial / <%=locals.title%>
          <img src="../assets/images/logo.png"  height="100px" width="100px">
    
     </h1>

     <section>
         <h4>Posts</h4>
         <%if(locals.user){%>
         <form action="/posts/create" id="new-post-form" method="POST">
             <textarea name="content" id="new-post-content" cols="30" rows="3" placeholder="Type here..."></textarea>
             <input type="submit" value="post">
         </form>
         <%}%>

         <div id="post-list-container">
             <h3>Posts</h3>
             <ul>
                 <% for(post of posts){%>
                    <div>
                    <p>
                    <li>
                        <%=post.content%>
                   
                    <br>
                    <small>
                        <%=post.user.name%>
                    </small>
                    </li>
                    </p>
                    </div>
             </ul>
                    <div class="post-comments">
                        <%if(locals.user){%>
                        <form action="/comments/create" method="post">
                            <input type="text" name="content" placeholder="Add a comment here..." required>
                            <!-- id of post on which comment need to be added -->
                            <input type="hidden" name="post" value="<%=post._id%>">
                            <input type="submit" value="Add Comment">
                        </form>
                        <%}%>

                        <div class="post-comments-list-container">
                            <ul class="post-comment-list" id="post-comment-<%=post._id%>">
                                <%for(comment of post.comments){%>
                                    <div id="div-loop-comments">
                                        <p>
                                        <li>
                                            <%=comment.content%>
                                       <br>
                                        <small>
                                            <%=comment.user.name%>
                                        </small>
                                        </li>
                                        </p>
                                    </div>
                                <%}%>
                                <hr>
                            </ul>

                        </div>

                    </div>
                <%}%>
         </div>
     </section>
      